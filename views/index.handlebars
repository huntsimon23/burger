{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto.


     \* Create a button in `index.handlebars` that will submit the user input into the database. --}}
<div class="jumbotron jumbotron-fluid">
     <h2 class="text-center">Welcome to Goodburgers!</h2>
</div>
<div class="container container-fluid">

<div class="row">
<div class="col">
     <h4 class="text-center">What can we make for you?</h4>
     <form class="text-center" action="/burgers" method="POST">
          <input type="text" id="name" name="burger_name" placeholder="Yum!">
          <button type="submit">Add This Burger to the Menu!</button>
    </form>
<hr>
<hr>
</div>
</div>

<div class="row">
<div class="col 6">
     <h3>Our Menu:</h3>
<ul>
{{#each burgers }}
     {{#unless this.devoured}}
     <form action="/burgers/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>
                <span class="input-group-btn">
                  <button class="btn btn-success devour-button" type="submit">Devour It!</button>
                </span>
            </div>
          </form>

    {{/unless}}
{{/each}}
</ul>
</div>
<div class="col 6">
     <h3>Wall of Burger Fame</h3>
<ul>
{{#each burgers}}
     {{#if this.devoured}}
     <li>{{this.burger_name}}</li>
     {{/if}}
{{/each}}
</ul>
</div>


